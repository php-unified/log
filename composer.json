{
  "name": "php-unified/log",
  "description": "A PHP standard for logging.",
  "keywords": ["log"],
  "type": "library",
  "license": "MIT",
  "prefer-stable": true,
  "minimum-stability": "stable",
  "require": {
    "php": "^7.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.4",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "authors": [
    {
      "name": "PHP Unified",
      "role": "Developer"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "PhpUnified\\Log\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PhpUnified\\Log\\Tests\\": "tests/"
    }
  },
  "archive": {
    "exclude": [
      "/tests",
      "/.gitignore",
      "/.travis.yml",
      "/phpunit.xml",
      "/phpcs.xml",
      "/PULL_REQUEST_TEMPLATE.md",
      "/CODE_OF_CONDUCT.md",
      "/CONTRIBUTING.md"
    ]
  }
}
